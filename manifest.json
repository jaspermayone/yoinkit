{
  "manifest_version": 3,
  "name": "Yoinkit",
  "version": "1.0",
  "description": "Extract and download media from any webpage",
  "permissions": ["activeTab"],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["content.js"]
  }]
}
